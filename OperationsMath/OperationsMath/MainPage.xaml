<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperationsMath.MainPage">

    <StackLayout>
        
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to my App!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        <Entry x:Name="num1" Keyboard="Numeric" Placeholder="Ingresa un Número" Margin="24,10"/>
        <Entry x:Name="num2" Keyboard="Numeric" Placeholder="Ingresa otro Número" Margin="24,0"/>

        <Label Text="Menú de Opciones" HorizontalTextAlignment="Center" FontSize="20" Padding="30,10,30,0"/>

        <Button x:Name="Sumar" Text="Suma" BackgroundColor="#2196F3" TextColor="White" Margin="24,10" Clicked="Sumar_Clicked"/>
        <Button x:Name="Restar" Text="Resta" BackgroundColor="#2196F3" TextColor="White" Margin="24,10" Clicked="Restar_Clicked"/>
        <Button x:Name="Multiplicar" Text="Multiplicación" BackgroundColor="#2196F3" TextColor="White" Margin="24,10" Clicked="Multiplicar_Clicked"/>
        <Button x:Name="Dividir" Text="División" BackgroundColor="#2196F3" TextColor="White" Margin="24,10" Clicked="Dividir_Clicked"/>

    </StackLayout>

</ContentPage>
